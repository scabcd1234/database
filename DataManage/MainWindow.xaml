                                    <DataGridTextColumn Binding="{Binding C44}" Header="C44"  Width="142"/>
                                    
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>

            </Grid>
        </Viewbox>
        
        
        



    </Grid>
</Window>
