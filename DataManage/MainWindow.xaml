<Window x:Class="DataManage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataManage"
        mc:Ignorable="d"
        Title="数据管理平台" Height="623" Width="500" Loaded="Window_Loaded" 
        WindowStartupLocation="CenterScreen" >
    <!--WindowState="Maximized" -->
    <Grid>
        <TabControl TabStripPlacement="Left">

            <TabItem Header="数据展示" FontSize="18" Height="40">
                <Grid Background="#FFE5E5E5">
                    
                    <!--两行一列-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!--搜索栏-->
                    <Grid Grid.Row="0" Grid.Column="1" >
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="30" Margin="20,20,20,20">
                            <Label Content="请输入名称:" Name="input" Margin="0,0,20,0"></Label>
                            <TextBox Text="" Name="text" Width="450" ></TextBox>
                            <Button Content="查询" Width="60" Margin="20,0,20,0" Click="BtnSelect"/>
                            <Button Content="刷新" Width="60" Margin="0,0,0,0" Click="BtnRefresh"/>
                            <Button Content="增加" Width="60" Margin="20,0,20,0" Click="BtnAdd"/>
                            <Button Content="删除" Width="60" Margin="0,0,0,0" Click="BtnDelete"/>
                            <Button Content="修改" Width="60" Margin="20,0,0,0" Click="BtnUpdate"/>
                        </StackPanel>
                    </Grid>


                    <!--显示栏-->
                    <DataGrid Name="dg1" AlternationCount="2" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" 
                              Margin="0,115,0,77" HorizontalAlignment="Center" SelectionChanged="dg1_SelectionChanged"
                              Grid.Row="1" Grid.Column="1">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                        <Setter Property="Background" Value="#DDDDDD"/>
                                    </Trigger>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Id}" Header="编号"  Width="50">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Id}" HorizontalContentAlignment="Center"></Label>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding UserName}" Header="姓名" Width="150"/>
                            <DataGridTextColumn Binding="{Binding Rank}" Header="等级" Width="150"/>
                            <DataGridTextColumn Binding="{Binding Content}" Header="微博内容"  Width="100"/>
                            <DataGridTextColumn Binding="{Binding PostDate}" Header="发布日期"  Width="100"/>
                            <DataGridTextColumn Binding="{Binding Forward}" Header="转发数"  Width="100"/>
                            <DataGridTextColumn Binding="{Binding Comment}" Header="评论数"  Width="100"/>
                            <DataGridTextColumn Binding="{Binding Likes}" Header="点赞数"  Width="100"/>
                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="选项卡2" FontSize="18" Height="40">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
        </TabControl>
        
        
        



    </Grid>
</Window>
