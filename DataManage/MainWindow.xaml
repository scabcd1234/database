<Window x:Class="DataManage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataManage"
        mc:Ignorable="d"
        Title="数据管理平台" Height="623" Width="1125" Loaded="Window_Loaded" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl TabStripPlacement="Left">
  
            <TabItem Header="数据展示">
                <Grid Background="#FFE5E5E5">
                    
                    <!--两行一列-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!--搜索栏-->
                    <Grid Grid.Row="0" Grid.Column="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="30">
                            <Button Content="增加" Width="60"/>
                            <Button Content="删除" Width="60" Margin="10,0,10,0"/>
                            <Button Content="修改" Width="60" />
                        </StackPanel>
                    </Grid>

                    <!--显示栏-->
                    <DataGrid Name="dg1" AlternationCount="2" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" 
                              Margin="0,115,0,77" HorizontalAlignment="Center" SelectionChanged="dg1_SelectionChanged"
                              Grid.Row="1" Grid.Column="1">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                        <Setter Property="Background" Value="#DDDDDD"/>
                                    </Trigger>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Id}" Header="编号"  Width="50"/>
                            <DataGridTextColumn Binding="{Binding Name}" Header="姓名" Width="150"/>
                            <DataGridTextColumn Binding="{Binding Age}" Header="年龄" Width="150"/>

                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="选项卡2">
                <Grid Background="#FFE5E5E5">
                </Grid>
            </TabItem>
        </TabControl>
        
        
        



    </Grid>
</Window>
