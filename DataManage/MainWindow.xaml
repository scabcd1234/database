                                        <Setter Property="BorderBrush" Value="Gray" />
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn>
                                        <DataGridCheckBoxColumn.HeaderTemplate >
